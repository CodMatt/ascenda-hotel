{
    "compilerOptions": {
      "target": "ES2017",                
      "lib": ["DOM", "ES2017"],          
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": "src"
    },
    "include": ["src"]
  }

  